<%= simple_form_for @campaign do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <h3>Custom fields</h3>
    <div id="actions">
        <div class="sortThese">
            <strong>Sortable fields go here</strong>
        </div>
    <%= f.label :email_field %>
    <%= f.check_box :email_field, class: "previewcheckbox" %>
    <%= f.label :first_name_field %>
    <%= f.check_box :first_name_field, class: "previewcheckbox" %>
    <%= f.label :last_name_field %>
    <%= f.check_box :last_name_field, class: "previewcheckbox" %>
    </div>
    <%= f.submit %>
<% end %>